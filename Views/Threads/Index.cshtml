@model ProjetoMvc.Models.Threads

@{
    ViewBag.Title = "Threads";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron text-center">
  <h1>Brincando com Threads</h1>
  <p>Nesse exemplo darei exemplo de Threads e multi-Threads</p> 
</div>

<div class="row-fluid">    
    <div class="panel panel-default">
        <div class="panel-heading">
            Comportamento de Threads
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("Index", "Campanhas", FormMethod.Post, new { @id = "ThreadsForm", enctype = "multipart/form-data" }))
            {
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="sel1">Selecione uma função:</label>
                        <select class="form-control" id="sel1">
                            <option>Single Threads</option>
                            <option>Multi Threads</option>
                            <option>Multi Threads - Sincronizadas</option>                           
                        </select>
                    </div>
                    <div class="form-group">
                        <div class="pull-right">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-default">Voltar</a>
                            <button class="btn btn-primary" type="submit" id="btnSalvar">Simular</button>
                        </div>
                    </div>
                </div>
               
            }
           
        </div>
    </div>
    
</div>
